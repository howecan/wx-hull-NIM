/* pages/movie-question/movie-question.wxss */
.container {
justify-content: flex-start;
background-color: #008e9c;
}

.mainpic{
  height:55vh;
  width: 100%;
 display: block;
}


.note{
  padding:20rpx 30rpx;
  color:#fff;
  font-size:32rpx;
  display:block;
}
.descwrap{
  
   height:45vh;
  
}
.askwrap{
  background-color: #fff;
}
.asklist{
  width:100%;
display: flex;

}
.ask-content{
  flex:1;
  font-size:38rpx;
  line-height: 1.5em;
  width:90%; 
  margin:0 auto;
}
.ask-title{
  color:#008e9c;
  margin-top:30rpx;
}
.poster{
  width:90%; 
  margin:0 auto;
}
.radio-group{
  margin:40rpx 0 100rpx 0;
  
}
.radio-group label{
  width:100%;
  min-height:50rpx;
  display: block;
  margin-bottom:30rpx;
}
.btn-area button{ 
   margin-bottom:50rpx;
   background-color:#008e9c;
   color:#fff;
   width:90%;
  
}
.yellow button{ 
background-color:#f6ed35;
color:#2f3d98;
}
.btn-area text{
  padding:0 30rpx;
}
.search-txt{
  border-width:1px;
  border-style:solid;
  border-color:#cccccc;
  margin:50rpx;
  font-size: 40rpx;
  width:610rpx;
  padding:20rpx;
}
.placeholder{
    color:#d1d1d1;
