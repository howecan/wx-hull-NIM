/* pages/movie-grid/move-grid.wxss */
.circle-wrapper {
  display:inline-block;
  height:130rpx;
  width:180rpx;
  text-align:center;
  margin:20rpx 0 0 0;
}


.circle-bg{
  width:100rpx;
  height:100rpx;
  margin:0 auto;
  border-radius: 50%;
  background: linear-gradient(to bottom left, #ef0836 , #fa9d23);
}
.poster{
  width:80rpx;
  height:80rpx;
  margin:10rpx;
  border-radius: 50%;
}
.circle-wrapper .name{
  display: block;
  width:180rpx;
  margin:10rpx 0 0 0;
  
  font-size:24rpx;
  height:30rpx;
  text-align: center;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
