/* pages/rank/rank.wxss */
.container {

}
.rank{
  width:96%;
  margin:60rpx 2% 0;
 
}

.tab-name{
  font-size:38rpx;
  font-weight: bold;
  height:80rpx;
  line-height: 80rpx;
  text-align: center;
  overflow: hidden;

}
.rankth{
  position: fixed;
  font-size: 28rpx;
  color:#999;
  width:100%;
  height:60rpx;
  left:0 ;
  top:0;
  line-height: 60rpx;
  background-color: #FFFFFF;
  border-bottom:1rpx solid #d1d1d1;
  display: flex;
  z-index: 9999;
}
.th1{
  width:100rpx;
  text-align: center;
}
.th2{
  width:550rpx;
  text-align: center;
}
.th3{
  width:100rpx;
  text-align: center;
}
.scroll-movie{


}
.rankli{
  width:100%;
  height:150rpx;
  border-bottom: 1rpx solid #e7e7e7;
  display: flex;
  justify-content: space-between;
}

.idx{
  font-family: fantasy;
  text-align: center;
  width:50rpx;
  height:120rpx;
  line-height: 150rpx;
}
.avator{
  width:120rpx;
  height:120rpx;
  border-radius: 50%;
  margin: 15rpx;
}
.title{
  width:400rpx;
}
.h2,.h3{
  width:100%;
  white-space: nowrap;
  overflow: hidden;
  font-size: 32rpx;
  padding:20rpx 0;
  color:black;
  display: block;
}
.h2{
  font-weight: bold;

}

.scores{
  font-family: fantasy;
  text-align: center;
  width:100rpx;
  font-size: 38rpx;
  
  line-height: 150rpx;
}
.dtime{
   width:100%;
  font-size: 26rpx;
  color:#666;
}

.btn-area button{ 
   margin-bottom:10rpx;
   background-color:#008e9c;
   color:#fff;
   width:90%;
  
}
.btn-area text{
  padding:0 30rpx;
}