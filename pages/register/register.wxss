.background-wrapper{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding-bottom: 10%;
	width: 100%;
	height: 100%;
  background-image: url("https://www.hullchina.com/images/wxchatroombg.jpg");
  background-position: center 0;
  background-size: cover;
}
.register-wrapper {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #fff;
}
.register-title {
  display: block;
  padding: 15% 0 20%;
  text-align: center;
  width: 250rpx;
}
.register-title-image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  margin: 20px auto;
  border:3px solid #fff;
}
.register-title-text {
  display: block;
  text-align: center;
  width: 100%;
}
.register-item {
  display: flex;
  flex-direction: row;
  width: 80%;
  height: 90rpx;
  margin: 50rpx auto;
  border-bottom: 1px solid #e7e7e7; 
}

.register-wrapper form {
  width: 100%;
}

.register-item-text {
  align-self: center;
  margin-right: 20rpx;
  font-size: 30rpx;
  height: 90rpx;
  line-height: 90rpx;
}

.register-item-input {
  border: none;
  width: 80%;
  display: inline-block;
  /* box-sizing: border-box; */
  height: 90rpx;
  font-size: 30rpx;
  /* text-indent: .3em;  */
}

.register-submit-btn {
  /* width: 90%; */
  /* height: 90rpx; */
   color: #fff; 
  vertical-align: middle;
  margin: 60rpx auto;
  width: 80%;
  background-color: #009900;
}

.register-to-login {
  font-size: 28rpx;
  color:#dd0b97;
}
button[disabled]:not([type]) {
  background-color:#009900;
  color: #fff;
}