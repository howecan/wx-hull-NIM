.background-wrapper{

	width: 100%;
	height: 100%;
  
padding-bottom: 1%;  
  background-image: url("https://www.hullchina.com/images/wxchatroombg.jpg");
  background-position: center 0;
  background-size: cover;
}
.login-wrapper {
  width: 100%;
  height:100%;
  display: flex;
  flex-direction: column;
  justify-content: space-round;
  align-items: center;
  
  color: #fff;
}
.login-wrapper form {
  width: 100%;
  height:100%;
}
.login-title {
  display: block;
  padding: 15% 0 20%;
  text-align: center;
  height:30%;
  width: 250rpx;
}
.login-title image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  margin: 20px auto;
  border:3px solid #fff;
}
.login-title text{
  display: block;
  text-align: center;
  width: 100%;
}
.login-item {
  
  margin: 0 auto;
  width: 70%;
  height: 188rpx;
  
}
.login-item + .login-item {
  margin-top: 16rpx;
  margin-bottom: 100rpx;
}
.login-item-text {
  align-self: center;
  margin-right: 20rpx;
  font-size: 32rpx;
  
}
.login-item-input {
 color:#fff;
	width: 100%;
	height: 45px;
  text-align: center;
	background-color:transparent;
	border: 1px solid rgb(173,185,193);
	border-radius: 22.5px;
	line-height: 45px;
	font-size: 30px;
	font-family: ".SFNSText-Regular";
}

.login-submit-btn {
  width: 80%;
  vertical-align: middle;
  background-color: #009900;
  color: #fff;
}

.to-register {
  width: 80%;
   color: #dd0b97;
  margin-top: 50rpx;
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
}
.login-to-unregister {
  color: #e7e6e6;
}
.login-to-register {
 text-align: center;
  width: 30%;
}
.nodisplay{
  display:none;
}